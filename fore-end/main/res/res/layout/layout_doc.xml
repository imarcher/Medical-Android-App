<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/doc_whole">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/doc_background">

        <ImageView
            android:id="@+id/doc_zixun"
            android:layout_marginTop="18dp"
            android:layout_marginRight="28dp"
            android:layout_alignParentEnd="true"
            android:layout_width="45dp"
            android:src="@drawable/zixun"
            android:layout_height="45dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_below="@id/doc_zixun"
            android:layout_alignParentEnd="true"
            android:text="向TA咨询"
            android:textColor="#CBCBCB"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/doc_touxiang"
            android:layout_width="79dp"
            android:layout_height="109dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_doc_touxiang"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/yisheng" />

        <TextView
            android:id="@+id/doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/doc_touxiang"
            android:text="DocName"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/doc_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doc_name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/doc_touxiang"
            android:text="DocPos"
            android:textColor="@color/light"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/doc_yiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/doc_touxiang"
            android:text="DocYiyuan"
            android:layout_marginBottom="15dp"
            android:layout_above="@id/doc_shanchang"
            android:textColor="@color/light"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/doc_shanchang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_below="@id/doc_touxiang"
            android:layout_alignParentStart="true"
            android:layout_toRightOf="@id/doc_touxiang"
            android:text="DocShanchang_____________________________________________________"
            android:textColor="@color/deep"
            android:textSize="20sp" />


    </RelativeLayout>


</LinearLayout>