<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/pingjia_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pingjia_touxiang"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/pingjia_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/pingjia_touxiang"
            android:text="昵称"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/pingjia_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pingjia_rela"
        android:layout_marginTop="10dp"
        android:text="    评价内容________________________________________________________________"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pingjia_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pingjia_info"
        android:layout_marginTop="10dp"
        android:text="日期:"
        android:textColor="@color/deep" />


</RelativeLayout>